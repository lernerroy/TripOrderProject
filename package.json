{
  "engines": {
    "node": "14.x"
  },
  "name": "triprecord",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/audit-logging": "^5.1.0",
    "@sap/cds": "^5",
    "@sap/cds-mtx": "^2.3.3",
    "@sap/hana-client": "^2.10.15",
    "@sap/hdi-deploy": "^4.2.0",
    "@sap/instance-manager": "^3.0.0",
    "@sap/xsenv": "^3.1.1",
    "@sap/xssec": "^3.2.7",
    "express": "^4.17.1",
    "hdb": "^0.18.3",
    "node": "^18.5.0",
    "passport": "^0.4.1"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.102.1",
    "sqlite3": "^5.0.2"
  },
  "scripts": {
    "start": "cds run",
    "watch": "cds watch",
    "prebuild-srv": "cds build --production",
    "build-srv": "mbt module-build -m triporder-srv -g",
    "build-ui": "mbt module-build -m triporder_ui_deployer -g",
    "deploy-srv": "cf deploy ./ -m triporder-srv",
    "deploy-ui": "cf deploy ./ -m triporder_ui_deployer",
    "undeploy": "cf undeploy triporderproject --delete-services --delete-service-keys",
    "watch-upload_utility": "cds watch --open upload_utility/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-aircraft_types": "cds watch --open aircraft_types/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-tailregistrations": "cds watch --open tailregistrations/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "i18n": {
      "folders": [
        "_i18n"
      ]
    },
    "requires": {
      "[production]": {
        "db": {
          "kind": "hana",
          "model": [
            "db",
            "srv"
          ],
          "vcap": {
            "label": "service-manager"
          }
        },
        "uaa": {
          "kind": "xsuaa"
        },
        "multitenancy": true
      },
      "[development]": {
        "multitenancy": false,
        "db": {
          "kind": "hana"
        },
        "auth": {
          "strategy": "mock",
          "users": {
            "roy.lerner@legstate.com": {
              "password": "123",
              "roles": [
                "API_user",
                "User",
                "Admin"
              ]
            }
          }
        }
      },
      "cat-service": {
        "kind": "odata",
        "model": "srv/external/cat-service"
      },
      "tripdraft-service": {
        "kind": "odata",
        "model": "srv/external/tripdraft-service"
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  },
  "sapux": [
    "app/tripdetails",
    "app/passengers",
    "app/cargo",
    "app/route_plan",
    "app/accommodation",
    "app/catering",
    "app/tripcollated",
    "app/tripinput",
    "app/fas",
    "app/languages",
    "app/airports",
    "app/carriers",
    "app/countries",
    "app/legstates",
    "app/currencies",
    "app/carriers",
    "app/carriers",
    "app/airports",
    "app/triplog",
    "app/upload_utility",
    "app/aircraft_types",
    "app/tailregistrations"
  ]
}
