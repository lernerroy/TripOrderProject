{
  "xsappname": "triporder-triprecordspace",
  "tenant-mode": "shared",
  "description": "Security profile of called application",
  "scopes": [
    {
        "name": "uaa.user",
        "description": "UAA"
    },
    {
        "name": "$XSAPPNAME.User",
        "description": "With this scope, USER can read products."
    },
    {
        "name": "$XSAPPNAME.Administrator",
        "description": "With this scope, USER can read & Write products."
    },
    {
        "name": "$XSAPPNAME.mtcallback",
        "description": "With this scope set, the callbacks for tenant onboarding, offboarding and getDependencies can be called.",
        "grant-as-authority-to-apps": [
        "$XSAPPNAME(application,sap-provisioning,tenant-onboarding)"
    ]
    }
  ],
  "role-templates": [
        {
            "name": "Administrator",
            "description": "Administrator",
            "scope-references": [
                "$XSAPPNAME.Administrator"
            ]
        },
        {
            "name": "User",
            "description": "User",
            "scope-references": [
                "$XSAPPNAME.User"
            ]
        }
    ],
    "role-collections": [
        {
            "name": "TripRecord_Administrator",
            "description": "Trip Record App Administrator",
            "role-template-references": [
                "$XSAPPNAME.Administrator",
                "$XSAPPNAME.User"
            ]
        },
        {
            "name": "TripRecord_User",
            "description": "Trip Record App User",
            "role-template-references": [
                "$XSAPPNAME.User"
            ]
        }
    ]
}

