<mvc:View
    controllerName="triplog.controller.CargoRecord"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:semantic="sap.f.semantic">

    <semantic:SemanticPage
        id="page"
        headerPinnable="false"
        toggleHeaderOnTitleClick="false"
        busy="{cargoRecordView>/busy}"
        busyIndicatorDelay="{cargoRecordView>/delay}">

        <semantic:titleHeading>
            <Title
                text="{i18n>tripRecordTitle}"
                level="H2"/>
        </semantic:titleHeading>
        
		<semantic:closeAction>
			<semantic:CloseAction press=".onClose"/>
		</semantic:closeAction> 
        <semantic:content>  
            <VBox class="sapUiSmallMargin">
                <f:SimpleForm 
                	labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="3"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="4"
                    emptySpanL="4"
                    emptySpanM="4"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1">
                	<Label text="{i18n>inflightno}" />
				    <Text text="{inflightno}" />
                    <Label text="{i18n>inorigin}" />
				    <Text text="{inorigin}" />
                    <Label text="{i18n>indestination}" />
				    <Text text="{indestination}" />
                    <Label text="{i18n>inscheddeptdate}" />
				    <Text text="{inscheddeptdate}" />

                </f:SimpleForm>
			</VBox >
        </semantic:content>      

    </semantic:SemanticPage>

</mvc:View>