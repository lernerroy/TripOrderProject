<mvc:View controllerName="tripinput.controller.TripInput"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:fb="sap.ui.comp.filterbar" displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">

    <Shell id="shell" appWidthLimited="true">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <fb:FilterBar reset="onReset" search="onSearch" showRestoreButton="true" showClearButton="true">
                            <fb:filterGroupItems>
                                <fb:FilterGroupItem groupName="__$INTERNAL$" name="A" label="Carrier Code" partOfCurrentVariant="true" visibleInFilterBar="true">
                                    <fb:control>
                                        <Input id="insupcarriercode2" value="{ViewModel>/filters/insupcarriercode2}" editable="true" class="sapUiMediumMarginTop sapUiSmallMarginEnd"/>
                                    </fb:control>
                                </fb:FilterGroupItem>

                                <fb:FilterGroupItem groupName="__$INTERNAL$" name="B" label="Flight No" labelTooltip="Tooltip Example" partOfCurrentVariant="true" visibleInFilterBar="true">
                                    <fb:control>
                                        <Input id="inflightno" value="{ViewModel>/filters/inflightno}" editable="true" class="sapUiMediumMarginTop sapUiSmallMarginEnd"/>
                                    </fb:control>
                                </fb:FilterGroupItem>

                                <fb:FilterGroupItem groupName="G1" groupTitle="Group1" name="A1" label="Origin" labelTooltip="Tooltip GroupItem Example" partOfCurrentVariant="true" visibleInFilterBar="true">
                                    <fb:control>
                                        <Input id="inorigin" value="{ViewModel>/filters/inorigin}" editable="true" class="sapUiMediumMarginTop"/>
                                    </fb:control>
                                </fb:FilterGroupItem>

                                <fb:FilterGroupItem groupName="G1" groupTitle="Group1" name="B1" label="Destination" partOfCurrentVariant="true" visibleInFilterBar="true">
                                    <fb:control>
                                        <Input id="indestination" value="{ViewModel>/filters/indestination}" editable="true" class="sapUiMediumMarginTop"/>

                                    </fb:control>
                                </fb:FilterGroupItem>


                                <fb:FilterGroupItem groupName="G2" groupTitle="Group2" name="B2" label="Departure Date" partOfCurrentVariant="true" visibleInFilterBar="true">
                                    <fb:control>
                                        <DatePicker valueFormat="YYYY-MM-dd" value="{ViewModel>/filters/inscheddeptdate}" id="inscheddeptdate" editable="true" class="sapUiMediumMarginTop"/>
                                    </fb:control>
                                </fb:FilterGroupItem>
                            </fb:filterGroupItems>

                        </fb:FilterBar>

